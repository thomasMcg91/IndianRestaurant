@model Coupon

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Coupon Item </h2>
<br />

<form method="post" encytype="multipart/form-data">
    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="Id" />

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CouponType" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" disabled class="form-control"></select>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Discount" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Discount" readonly class="form-control" />
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MinimumAmount" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MinimumAmount" readonly class="form-control" />
                    </div>

                </div>


            </div>

        </div>

        <div class="col-3 offset-1">
            <img src="@Model.Picture" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
        </div>

        <div class="col-8">
            <div class="col-8 offset-4"></div>
            <partial name="_DeleteAndBackToListButton" model="Model.Id" />
        </div>

    </div>
</form>
